<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="550"
             x:Class="DelphiNet6.Controls.Login">
    <Panel Background="{DynamicResource PrimaryHeaderBackground}" Width="400" Height="550">
        <StackPanel Background="{DynamicResource PrimaryBackground}" Width="390" Height="545" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="30">Enter your DelphiNet Credentials</TextBlock>
            <TextBox x:Name="usernameIn" CornerRadius="7"></TextBox>
            <TextBox x:Name="passwordIn" CornerRadius="7"></TextBox>
            <Button Click="authenticate" CornerRadius="7"></Button>
        </StackPanel>
    </Panel>
</UserControl>
