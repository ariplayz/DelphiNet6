<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="550"
             x:Class="DelphiNet6.Controls.Login">
    <Panel Background="{DynamicResource PrimaryHeaderBackground}" Width="400" Height="550">
        <StackPanel Background="{DynamicResource PrimaryBackground}" Width="390" Height="545" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Panel Background="{DynamicResource PrimaryHeaderBackground}" HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="390" Height="60">
                <TextBlock FontSize="25" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">Enter your DelphiNet Credentials</TextBlock>
            </Panel>
            
            <TextBox x:Name="usernameIn" CornerRadius="7" Height="50" Width="235" Margin="0 10" HorizontalAlignment="Center"></TextBox>
            <TextBox x:Name="passwordIn" CornerRadius="7" Height="50" Width="235" Margin="0 10" HorizontalAlignment="Center"></TextBox>
            <Button Click="authenticatebutton" CornerRadius="7" HorizontalAlignment="Center" Margin="0 10" Content="Login"></Button>
        </StackPanel>
    </Panel>
</UserControl>
