<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
             x:Class="DelphiNet6.Controls.ProgramWidget">
    <StackPanel Orientation="Vertical" Background="{DynamicResource PrimaryBackgroundGradient}" Height="495" Width="395" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Panel Height="50" VerticalAlignment="Top">
             <TextBlock Background="Transparent" Margin="10 0" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryForeground}" FontSize="35">Program</TextBlock>
        </Panel>
       
        <Grid ColumnDefinitions="230, 110, 60" RowDefinitions="*" Background="{DynamicResource PrimaryBackgroundGradient}">
            <ProgressBar Grid.Row="0" Height="40" CornerRadius="12" Foreground="LightBlue" Minimum="0" Maximum="100" ShowProgressText="True" x:Name="ProgramProgress">
            </ProgressBar>
        </Grid>
    </StackPanel>
</UserControl>
