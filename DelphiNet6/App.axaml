<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:DelphiNet6"
             x:Class="DelphiNet6.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

             <Application.Styles>
                 <FluentTheme />
                 <StyleInclude Source="Styles/AppDefaultStyles.axaml"></StyleInclude>
             </Application.Styles>

             <Application.Resources>
                 <SolidColorBrush x:Key="PrimaryBackground">#025236</SolidColorBrush>
                 <SolidColorBrush x:Key="PrimaryForeground">#CFCFCF</SolidColorBrush>
                 <LinearGradientBrush x:Key="PrimaryBackgroundGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
                     <GradientStop Offset="0" Color="#025236"></GradientStop>
                     <GradientStop Offset="1" Color="#008254"></GradientStop>
                 </LinearGradientBrush>
                 <LinearGradientBrush x:Key="PrimaryNumericUpDownGradient" StartPoint="0%, 0%" EndPoint="0%, 0%">
                     <GradientStop Offset="0" Color="#025236"></GradientStop>
                     <GradientStop Offset="1" Color="#008254"></GradientStop>
                     <GradientStop Offset="2" Color="#025236"></GradientStop>
                 </LinearGradientBrush>
                 
                 <SolidColorBrush x:Key="PrimaryHoverBackground">#008254</SolidColorBrush>
                 <SolidColorBrush x:Key="PrimaryHoverForeground">White</SolidColorBrush>
                 
                 
                 <FontFamily x:Key="AkkoPro">/Assets/Fonts/Akko-Pro-Regular.ttf#Akko Pro</FontFamily>
                 <FontFamily x:Key="AkkoProBold">/Assets/Fonts/Akko-Pro-Bold.ttf#Akko Pro</FontFamily>
                 <FontFamily x:Key="Phosphor">/Assets/Fonts/Phosphor.ttf#Phosphor</FontFamily>
                 <FontFamily x:Key="PhosphorFill">/Assets/Fonts/Phosphor-Fill.ttf#Phosphor-Fill</FontFamily>
                 <FontFamily x:Key="JetBrainsMono">/Assets/Fonts/JetBrainsMono-Regular.ttf#JetBrains Mono</FontFamily>
                 
                 
             </Application.Resources>
</Application>